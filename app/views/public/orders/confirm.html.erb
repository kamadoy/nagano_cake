<h1>注文情報確認</h1>
<%= form_with model: @order,url: orders_path do |f| %>
<% @cart_items.each do |cart_item| %>

<p>商品名</p>
<p>商品名</p>
<%= cart_item.item.name %>
<p>値段</p>
<%= (cart_item.item.price*1.08).floor %>
<p>個数</p>
<%= cart_item.amount %>
<p>小計</p>
\<%= cart_item.amount*(cart_item.item.price*1.08).floor %>
<% end %>
<p>合計</p>
¥<%= @total.floor %>
<%= f.hidden_field :total_payment, :value => @total.floor + @order.shipping_cost %>
<h4>支払い方法</h4>
<%= @order.payment_method_i18n %>
<%= f.hidden_field :payment_method, :value => @order.payment_method %>
<h4>お届け先</h4>
〒<%= @order.postal_code %>
<%= f.hidden_field :postal_code, :value => @order.postal_code %>
<%= @order.adress %>
<%= f.hidden_field :adress, :value => @order.adress %>
<%= @order.name %>
<%= f.hidden_field :name, :value => @order.name %>
<%= f.hidden_field :shipping_cost, :value => 800 %>

<%= f.submit"注文を確定する" %>
<% end %>