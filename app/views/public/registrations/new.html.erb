<h2>Sign up</h2>

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


  <div class="field">
    <p>名前</p>
    <%= f.label :first_name ,"(姓)"%>
    <%= f.text_field :first_name %>
    <%= f.label :last_name ,"(名)"%>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <p>フリガナ</p>
    <%= f.label :first_name_kana ,"(セイ)"%>
    <%= f.text_field :first_name_kana %>
    <%= f.label :last_name_kana ,"(メイ)"%>
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <p>メールアドレス</p>
    <% f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
  <p>郵便番号(ハイフンなし)</p>
    <% f.label :postal_code %>
    <%= f.number_field :postal_code %>
  </div>

  <div class="field">
  <p>住所</p>
    <% f.label :adress %>
    <%= f.text_field :adress %>
  </div>

  <div class="field">
  <p>電話番号(ハイフンなし)</p>
    <% f.label :telephone_number %>
    <%= f.number_field :telephone_number %>
  </div>

  <div class="field">
    <p>パスワード(6文字以上)</p>
    <% f.label :password %>
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
     <p>パスワード(確認用)</p>
    <% f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>