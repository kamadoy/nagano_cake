
<%= link_to "カートを空にする",destroy_all_path(@cart_items),method: :delete %>
<h1>ショッピングカート</h1>
<% @cart_items.each do |cart_item| %>
<%= form_with model: cart_item,url: cart_item_path(cart_item) do |f| %>
<p>商品名</p>
<%= cart_item.item.name %>
<p>値段</p>
<%= (cart_item.item.price*1.08).floor %>
<p>個数</p>
<%= f.select :amount,*[1..10] %>
<%= f.submit "更新" %>
<p>小計</p>
\<%= cart_item.amount*(cart_item.item.price*1.08).floor %>
<%= link_to "削除", cart_item_path(cart_item),method: :delete,"data-confirm" => "Are you sure?" %>
<% end %>
<p>合計</p>
¥<%= @total.floor %>
<% end %>

