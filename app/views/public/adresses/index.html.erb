<%= form_with model: @adress ,url: {controller: 'public/adresses',action: 'create'} do |f| %>
<h4>配送先登録・一覧</h4>
<h4>郵便番号</h4>
<%= f.number_field :postal_code %>
<h4>住所</h4>
<%= f.text_field :adress %>
<h4>宛名</h4>
<%= f.text_field :name %>

<%= f.submit '新規作成' %>
<% @adresses.each do |adress| %>
<h4>郵便番号</h4>
<%= adress.postal_code %>
<h4>住所</h4>
<%= adress.adress %>
<h4>宛名</h4>
<%= adress.name %>
<%= link_to "編集", edit_adress_path(adress) %>
<%= link_to "削除", adress_path(adress),method: :delete,"data-confirm" => "Are you sure?" %>
<% end %>
<% end %>
