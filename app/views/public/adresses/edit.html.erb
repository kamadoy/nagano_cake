<%= form_with model: @adress ,url: {controller: 'public/adresses',action: 'update'} do |f| %>
<div class="container">
<h4>配送先登録・一覧</h4>
 <div class="form-group">
　<label for="postal_code">郵便番号(ハイフンなし)</label>
       <%= f.number_field :postal_code %>
 </div>
<div class="form-group">
　<label for="adress">住所</label>
       <%= f.text_field :adress %>
</div>
<div class="form-group">
　<label for="name">宛名</label>
       <%= f.text_field :name %>
<%= f.submit '変更内容を保存', class: "btn btn-success btn-sm" %>
</div>
<% end %>
</div>
