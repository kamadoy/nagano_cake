<h2>商品編集</h2>
<%= form_with model: @item ,url: {controller:'items',action: 'update'} do |f| %>
  <h4>商品画像</h4>
 <%= f.file_field :image_id, accept: "image/*" %>
<h4>商品名</h4>
<%= f.text_field :name %>
<h4>商品説明</h4>
<%= f.text_area :introduction %>
<h4>ジャンル</h4>
<%= f.select :genre_id, @genres.map{|genre| [genre.name,genre.id]},{include_blank: "選択してください"} %>
<h4>税抜き価格</h4>
<%= f.number_field :price %>円
<h4>販売ステータス</h4>
<%#= @item.is_active ? '販売中':'販売停止中' %>
<%= f.radio_button :is_active, true %>
<%= f.label :is_active, '販売中', value: true %>
<%= f.radio_button :is_active, false %>
<%= f.label :is_active, '販売停止中', value: false %>
  <%= f.submit "変更を保存" %>
<% end %>