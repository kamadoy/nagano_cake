<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

 <body>
  <header>
    <% if customer_signed_in? %>
      <li>
        <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
      </li>

    <% else %>
    <% if admin_signed_in? %>
      <div class="row">
      <%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete %>
      </div>
       <div class="row">
        <%= link_to "ジャンル追加", admin_genres_path,class: 'btn btn-secondary' %>
      </div>
      <div class="row">
        <%= link_to "商品一覧", admin_items_path,class: "btn btn-secondary"  %>
      </div>
      <%#= link_to "顧客一覧", controller: 'admin/customers_controller' %>

    <% else %>

      <li>
        <%= link_to "新規登録", new_customer_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_customer_session_path %>
      </li>
    <% end %>
    <% end %>
  </header>
  <%= yield %>
</body>
</html>
